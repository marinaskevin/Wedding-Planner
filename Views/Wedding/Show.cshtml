@{
    ViewData["Title"] = ViewBag.Wedding.WedderOne+" and "+ViewBag.Wedding.WedderTwo+"'s Wedding";
}

<div class="row">
    <div class="col-sm-12">
        <span class="align-bottom">
            <h1>@(ViewBag.Wedding.WedderOne) and @(ViewBag.Wedding.WedderTwo)'s Wedding</h1>
        </span>
        <span class="align-bottom pull-right">
            <nobr><a href="/Weddings">Dashboard</a> | <a href="/User/Logout">Log Out</a></nobr>
        </span>
    </div>
</div>

<hr>

@using Wedding_Planner
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Wedding_Planner.Models.Wedding

<div class="row">
    <div class="col-sm-6">
        <h2>Date: @(ViewBag.Wedding.WeddingDate.ToString("MMM dd yyyy"))</h2>
        <h3>Guests:</h3>
        <div class="container">
            @if(ViewBag.WeddingGuests.Guests.Count == 0)
            {
                <h4>No Guests Enrolled.</h4>
            }
            @foreach(var Guest in ViewBag.WeddingGuests.Guests)
            {
                <h4>@Guest.User.FirstName @Guest.User.LastName</h4>
            }
        </div>
    </div>
    <div class="col-sm-6">
        <iframe src="//www.google.com/maps/embed/v1/place?q=@(ViewBag.Wedding.WeddingAddress)
            &zoom=17
            &key=AIzaSyCIOVrMJqQw51WIQpzU8YMuZOAwZAJZLAk">
        </iframe>
    </div>
</div>